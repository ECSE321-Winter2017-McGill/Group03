<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view_specific_job_posting_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.mcgill.ecse321.tamas_mobile.ViewSpecificJobPosting_Activity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/JobPostingTitle"
            android:textSize="36sp"
            android:textStyle="normal|bold"
            android:textColor="@android:color/background_dark" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    android:textSize="20sp"
                    android:text="Job title: "
                    android:textColor="@android:color/background_dark"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="TBD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/JobTitle"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:text="Number needed: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="normal|bold"
                    android:textColor="@android:color/background_dark" />

                <TextView
                    android:text="TBD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/numberNeeded"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:text="Hourly rates: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8"
                    android:textSize="20sp"
                    android:textStyle="normal|bold"
                    android:textColor="@android:color/black" />

                <TextView
                    android:text="TBD"
                    android:layout_width="wrap_content"
                    android:layout_height="25sp"
                    android:id="@+id/hourlyRates"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:text="Working hours: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="normal|bold"
                    android:textSize="20sp"
                    android:textColor="@android:color/black" />

                <TextView
                    android:text="TBD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/workingHours"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:text="Deadline: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView16"
                    android:textSize="20sp"
                    android:textStyle="normal|bold"
                    android:textColor="@android:color/black" />

                <TextView
                    android:text="TBD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/applicationDeadline"
                    android:textSize="20sp" />
            </TableRow>
        </TableLayout>

        <TextView
            android:text="Preferred experience: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="normal|bold"
            android:textSize="20sp"
            android:textColor="@android:color/black" />

        <TextView
            android:text="TBD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/preferredExperience"
            android:textSize="20sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="Apply now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/applyButton"
                style="@style/Widget.AppCompat.Button.Colored"
                android:textStyle="normal|bold"
                android:textSize="18sp"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:onClick="apply"/>

            <Button
                android:text="BACK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/backButton"
                style="@style/Widget.AppCompat.Button.Colored"
                android:textStyle="normal|bold"
                android:textSize="18sp"
                android:layout_weight="1"
                android:onClick="backToViewJobPosting"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
