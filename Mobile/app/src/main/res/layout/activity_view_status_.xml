                    <TextView
                        android:text="-"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/course_empty2"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:textColor="@android:color/background_dark" />
                </LinearLayout>
