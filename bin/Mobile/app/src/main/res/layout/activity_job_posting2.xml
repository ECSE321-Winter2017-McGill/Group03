<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_job_posting2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.mcgill.ecse321.tamas_mobile.JobPosting2">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="ECSE 321 - Grader"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/jobPostingTitle2"
            android:textSize="30sp"
            android:textStyle="normal|bold"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:text="Coure: ECSE 321\n\nJob: Grader (5)\n\nTotal hours: 50 hours\n\nHourly rate: $17.0/hr\n\nPreferred experience: Have been a grader for this course or ECSE 223\n\nApplication deadline: March 2nd, 2017\n\n"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/postingContent"
            android:textSize="18sp"
            android:textColor="@android:color/background_dark" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="Apply now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/applyNow_button2"
                android:layout_weight="0.70"
                style="@style/Widget.AppCompat.Button.Colored"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:onClick="applyForJob2"/>

            <Button
                android:text="back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/backButton2"
                style="@style/Widget.AppCompat.Button.Colored"
                android:textStyle="normal|bold"
                android:layout_gravity="end"
                android:onClick="backFromJobPosting2"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
