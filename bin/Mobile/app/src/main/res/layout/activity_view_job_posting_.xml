<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view_job_posting_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.mcgill.ecse321.tamas_mobile.ViewJobPosting_Activity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="View the job postings below and apply for jobs!"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/Title"
            android:textStyle="normal|bold"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="24sp" />

        <TextView
            android:text="Available jobs:"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/subtitle"
            android:textStyle="normal|italic"
            android:textSize="24sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:weightSum="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="?android:attr/textSelectHandleRight"
                android:id="@+id/imageView12"
                android:layout_gravity="left"
                android:layout_weight="0.47" />

            <TextView
                android:text="ECSE 321 - TA"
                android:layout_width="274dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:textColor="@android:color/background_dark"
                android:onClick="viewJobPosting1"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:weightSum="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="?android:attr/textSelectHandleRight"
                android:id="@+id/imageView13"
                android:layout_weight="0.10"
                android:layout_gravity="left"/>

            <TextView
                android:text="ECSE 321 - Grader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:layout_weight="0.12"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:textColor="@android:color/background_dark"
                android:onClick="viewJobPosting2"/>

        </LinearLayout>

        <view
            android:layout_width="match_parent"
            android:layout_height="200dp"
            class="android.support.v4.widget.Space"
            android:id="@+id/view" />




        <Button
            android:text="Back"
            android:layout_width="wrap_content"
            android:id="@+id/back_button"
            android:textColor="@android:color/background_light"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textStyle="normal|bold"
            android:onClick="backToHome"
            android:layout_height="wrap_content"
            android:layout_gravity="end"/>


    </LinearLayout>

</RelativeLayout>
